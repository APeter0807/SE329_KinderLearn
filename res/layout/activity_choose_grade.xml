<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/planet_earth_in_space"  >
    
    <Button
        android:id="@+id/kindergarten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"
        android:background="#25000000"
        android:text="Kindergarten"
        android:onClick="startKindergarten"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/first_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kindergarten"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:background="#25000000"
        android:text="First Grade"
        android:onClick="startFirstGrade"
        android:textColor="#ffffff" />
    
    <Button
        android:id="@+id/second_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_grade"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:background="#25000000"
        android:text="Second Grade"
        android:onClick="startSecondGrade"
        android:textColor="#ffffff" />
        
    <Button
        android:id="@+id/third_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/second_grade"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:background="#25000000"
        android:text="Third Grade"
        android:onClick="startThirdGrade"
        android:textColor="#ffffff" />
            
    <Button
        android:id="@+id/fourth_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/third_grade"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:background="#25000000"
        android:text="Fourth Grade"
        android:onClick="startFourthGrade"
        android:textColor="#ffffff" />
        
    <Button
        android:id="@+id/fifth_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fourth_grade"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:background="#25000000"
        android:text="Fifth Grade"
		android:onClick="startFifthGrade"
        android:textColor="#ffffff" />
        
    <Button
        android:id="@+id/sixth_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fifth_grade"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:background="#25000000"
        android:text="Sixth Grade"
        android:onClick="startSixthGrade"
        android:textColor="#ffffff" />

</RelativeLayout>
